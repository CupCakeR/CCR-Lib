
class Currency extends CCR.Currency
	constructor()
		super("pointshop_1")
	end

	set(p, amount)
		p:PS_SetPoints(amount)
	end

	add(p, amount)
		p:GiveMoney(amount)
	end

	get(p)
		return p:PS_GetPoints()
	end

	canAfford(p, amount)
		return self:get(p) >= amount
	end

	format(amount)
		return string.Comma(amount) .. PS.Config.PointsName
	end
end

Currency():register(true)